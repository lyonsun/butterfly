<p id="notice"><%= notice %></p>

<h1>Listing Shippings</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Tracking number</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shippings.each do |shipping| %>
      <tr>
        <td><%= shipping.company %></td>
        <td><%= shipping.tracking_number %></td>
        <td><%= shipping.status %></td>
        <td><%= link_to 'Show', shipping %></td>
        <td><%= link_to 'Edit', edit_shipping_path(shipping) %></td>
        <td><%= link_to 'Destroy', shipping, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

