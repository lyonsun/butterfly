<h1 class="page-header">Delivery Addresses</h1>

<% if !@deliveries.blank? %>
  <div class="alert alert-info">There are currently <%= @deliveries.count %> addresses imported.</div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Phone</th>
        <th>Province</th>
        <th>City</th>
        <th>District</th>
        <th>Street</th>
        <th>Postcode</th>
      </tr>
    </thead>
    <tbody>
      <% for delivery in @deliveries %>
      <tr>
        <td><%= delivery.name %></td>
        <td><%= delivery.phone %></td>
        <td><%= delivery.province %></td>
        <td><%= delivery.city %></td>
        <td><%= delivery.district %></td>
        <td><%= delivery.street %></td>
        <td><%= delivery.postcode %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  
<% end %>